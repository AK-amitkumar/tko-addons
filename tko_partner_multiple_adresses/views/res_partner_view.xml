<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="partner_search_inherit" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="address_ids" string="Address"
                       domain="[('address_ids.name','ilike',self)]"/>
            </field>
        </field>
    </record>

    <record id="res_partner_inherited_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <page name="sales_purchases" position="after">
                <page string="Addresses">
                    <field name="address_ids">
                        <tree colors="black:is_main == True">
                            <field name="name"/>
                            <field name="zip"/>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="number"/>
                            <field name="district"/>
                            <field name="country_id" options="{'no_create': True}"/>
                            <field name="state_id" domain="[('country_id','=',country_id)]"
                                   options="{'no_create': True}"/>
                            <field name="city_id" domain="[('state_id','=',state_id)]" options="{'no_create': True}"/>
                            <field name="is_main" invisible="1"/>
                            <button name="set_main_address"
                                    type="object"
                                    attrs="{'invisible' : [('is_main' ,'!=',False)]}"
                                    string="Make it main"/>
                        </tree>
                        <form>
                            <header>
                                <button name="set_main_address"
                                        type="object"
                                        attrs="{'invisible' : [('is_main' ,'!=',False)]}"
                                        string="Make it main"/>
                            </header>
                            <group>
                                <field name="name" colspan="4"/>

                                <field name="street"/>
                                <field name="street2"/>
                                <field name="number"/>
                                <field name="district"/>
                                <field name="zip"/>
                                <field name="country_id" options="{'no_create': True}"/>
                                <field name="state_id" domain="[('country_id','=',country_id)]"
                                       options="{'no_create': True}"/>
                                <field name="city_id" domain="[('state_id','=',state_id)]"
                                       options="{'no_create': True}"/>
                                <field name="is_main" invisible="1"/>
                            </group>
                        </form>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>